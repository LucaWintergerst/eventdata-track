{
  "name": "shard-sizing",
  "description": "Indexes sets of 2M events into Elasticsearch, followed by index statistics and simulated Kibana queries. IDs are autogenerated by Elasticsearch, meaning there are no conflicts. This process is repeatedly run until 50M events have been indexed into the shard.",
  "index-settings": {
    "index.number_of_replicas": 0,
    "index.number_of_shards": 1
  },
  "meta": {
    "benchmark_type": "shard-sizing"
  },
  "schedule": [
    {% for n in range(1,shard_sizing_iterations) %}
    {
      "operation": "index-append-1000-shard-sizing",    
      "iterations": 2000,
      "clients": 8,
      "meta": {
        "iteration_number": {{ n }}
      }
    },
    {
      "operation": "indicesstats_elasticlogs",
      "iterations": 1,
      "meta": {
        "iteration_number": {{ n }}
      }
    },
    {
      "operation": "kibana-traffic-shard-sizing-50%",
      "iterations": {{ shard_sizing_queries }},
      "meta": {
        "iteration_number": {{ n }}
      }
    },
    {
      "operation": "kibana-traffic-shard-sizing-90%",
      "iterations": {{ shard_sizing_queries }},
      "meta": {
        "iteration_number": {{ n }}
      }
    },
    {
      "operation": "kibana-content_issues-shard-sizing-50%",
      "iterations": {{ shard_sizing_queries }},
      "meta": {
        "iteration_number": {{ n }}
      }
    },
    {
      "operation": "kibana-content_issues-shard-sizing-90%",
      "iterations": {{ shard_sizing_queries }},
      "meta": {
        "iteration_number": {{ n }}
      }
    },
    {% endfor %}
    {
      "operation": "index-append-1000-shard-sizing",    
      "iterations": 2000,
      "clients": 8,
      "meta": {
        "iteration_number": {{ shard_sizing_iterations }}
      }
    },
    {
      "operation": "indicesstats_elasticlogs",
      "iterations": 1,
      "meta": {
        "iteration_number": {{ shard_sizing_iterations }}
      }
    },
    {
      "operation": "kibana-traffic-shard-sizing-50%",
      "iterations": {{ shard_sizing_queries }},
      "meta": {
        "iteration_number": {{ shard_sizing_iterations }}
      }
    },
    {
      "operation": "kibana-traffic-shard-sizing-90%",
      "iterations": {{ shard_sizing_queries }},
      "meta": {
        "iteration_number": {{ shard_sizing_iterations }}
      }
    },
    {
      "operation": "kibana-content_issues-shard-sizing-50%",
      "iterations": {{ shard_sizing_queries }},
      "meta": {
        "iteration_number": {{ shard_sizing_iterations }}
      }
    },
    {
      "operation": "kibana-content_issues-shard-sizing-90%",
      "iterations": {{ shard_sizing_queries }},
      "meta": {
        "iteration_number": {{ shard_sizing_iterations }}
      }
    }
  ]
}